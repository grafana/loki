{
  "name": "loki-release",
  "version": "0.1.0",
  "description": "release pipeline and actions for Loki",
  "scripts": {
    "all": "npm run workflows && npm run format:write && npm run lint && npm run test && npm run coverage && npm run actions",
    "bundle": "npm run format:write && npm run actions",
    "ci-test": "jest",
    "coverage": "make-coverage-badge --output-path ./badges/coverage.svg",
    "format:check": "prettier --check **/*.ts",
    "format:write": "prettier --write **/*.ts",
    "get-version": "npx ts-node actions/get-version.ts",
    "jsonnetfmt": "jsonnetfmt -i -n 2 ./workflows/**/*.{jsonnet,libsonnet}",
    "lint": "npx eslint . -c .eslintrc.yml",
    "actions": "for p in install-binary push-images should-release; do ncc build actions/${p}/src/index.ts --license licenses.txt --out actions/${p}/dist; done",
    "prepare": "husky install",
    "test": "jest",
    "workflows": "jsonnet -Sm .github/workflows .github/workflows.jsonnet"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/grafana/loki-release.git"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "bugs": {
    "url": "https://github.com/grafana/loki-release/issues"
  },
  "homepage": "https://github.com/grafana/loki-release#readme",
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./actions/*/src/**"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@actions/tool-cache": "^2.0.1",
    "chalk": "^4.0.0",
    "figures": "^3.0.0",
    "release-please": "trevorwhitney/release-please#dry-run-output"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.11.16",
    "@types/sinon": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.54.0",
    "eslint-plugin-github": "^4.10.1",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-jsonc": "^2.10.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "lint-staged": "^13.2.2",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.1.0",
    "prettier-eslint": "^16.1.2",
    "sinon": "16.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.2"
  }
}
